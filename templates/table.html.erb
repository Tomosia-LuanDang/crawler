<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Crawl</title>
  </head>
  <body>
    <div class="container">
      <h2 class="text-center fs-1 m-5">User Management</h2>
      <div class="text-end">
      <a href="/download-csv" download>
        <button type="button" class="btn btn-lg m-1 btn-primary">Export CSV</button>
      </a>
      <a href="/download-xlsx" download>
        <button type="button" class="btn btn-lg m-1 btn-success">Export Excel</button>
        </a>
      </div>
      <table class="table table-striped mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <% @json_hash.first.keys.each do |key| %>
              <th scope="col"><%= key.capitalize %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
        <% @json_hash.each_with_index do |item, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= item["name"]    %></td>
            <td><%= item["phone"]   %></td>
            <td><%= item["email"]   %></td>
            <td><%= item["country"] %></td>
            <td><%= item["region"]  %></td>
            <td><%= item["text"]    %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>